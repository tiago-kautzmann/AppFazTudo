<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      alignment="CENTER"
      spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.appfaztudo.ConversaoTemperaturaController"
      prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label>CONVERSÃO DE TEMPERATURA:</Label>
    <Label>Informe uma temperatura em graus Celsius:</Label>
    <TextField fx:id="textValorCelsius" />
    <Label>Selecione a métrica para conversão:</Label>
    <ComboBox fx:id="comboMetrica" />
    <Button onMouseClicked="#onConverterButtonClick">Converter</Button>
    <Label fx:id="labelResultado" />

</VBox>
